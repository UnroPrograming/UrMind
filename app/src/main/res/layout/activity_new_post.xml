<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nonwhite"
    tools:context=".ui.home.NewPost">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/ic_post"
        android:backgroundTint="#9FE4D8BF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibolditalic"
        android:gravity="center"
        android:text="Crea un post"
        android:textColor="@color/blue2"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/lay_newPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Título"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <FrameLayout
            android:id="@+id/lay_addImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_fotoPost"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/back_login"
                android:scaleType="centerCrop"
                app:riv_oval="true"/>
            <TextView
                android:id="@+id/txt_addImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir imagen"
                android:textSize="13dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_italic"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Post"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <Button
            android:id="@+id/btn_subir"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_blue2"
            android:fontFamily="@font/montserrat_semibolditalic"
            android:textColor="@color/nonwhite"
            android:text="SUBIR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.configuracion.ConfiguracionFragment">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:background="@drawable/ic_menu_configuracion"
        android:backgroundTint="#9FE4D8BF"
        tools:ignore="MissingConstraints"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="385dp"
                android:layout_height="44dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibolditalic"
                android:text="ConfiguraciÃ³n"
                android:textColor="@color/blue1"
                android:textSize="30sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="30dp"/>

            <TextView
                android:layout_width="282dp"
                android:layout_height="37dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Cuenta"
                android:textColor="@color/blue2"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="282dp"
                android:layout_height="37dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Notificaciones"
                android:textColor="@color/blue2"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="282dp"
                android:layout_height="37dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Apariencia"
                android:textColor="@color/blue2"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="282dp"
                android:layout_height="37dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Ayuda y Soporte"
                android:textColor="@color/blue2"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="282dp"
                android:layout_height="37dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Sobre Nosotros"
                android:textColor="@color/blue2"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
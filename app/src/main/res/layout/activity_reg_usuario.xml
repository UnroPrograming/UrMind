<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nonwhite"
    tools:context=".reg_usuario">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/ic_menu_cuenta"
        android:backgroundTint="#9FE4D8BF"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Tipo de proveedor"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <TextView
            android:id="@+id/txt_provider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Nombre"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_Nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Apellidos"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_Apellidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="TelÃ©fono"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_telefono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="DNI"
            android:textSize="15dp"
            android:textColor="@color/blue1"
            android:fontFamily="@font/montserrat_italic"/>

        <EditText
            android:id="@+id/eTxt_DNI"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/nondark"/>

        <Button
            android:id="@+id/btn_registrarUsuario"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_blue2"
            android:fontFamily="@font/montserrat_semibolditalic"
            android:textColor="@color/nonwhite"
            android:text="REGISTRAR" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nonwhite"
    tools:context=".reg_usuario">

    <ImageView
        android:layout_width="700dp"
        android:layout_height="700dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/ic_menu_cuenta"
        android:backgroundTint="#9FE4D8BF"/>

    <LinearLayout
        android:id="@+id/lay_imagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_usuario"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_blue2"
            android:fontFamily="@font/montserrat_semibolditalic"
            android:textColor="@color/nonwhite"
            android:text="USUARIO" />

        <Button
            android:id="@+id/btn_psicologo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_blue2"
            android:fontFamily="@font/montserrat_semibolditalic"
            android:textColor="@color/nonwhite"
            android:text="PSICOLOGO" />

        <Button
            android:id="@+id/btn_empresa"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/boton_blue2"
            android:fontFamily="@font/montserrat_semibolditalic"
            android:textColor="@color/nonwhite"
            android:text="EMPRESA" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>